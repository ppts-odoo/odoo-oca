<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="customer_invoice_stock_move_view" model="ir.ui.view">
        <field name="name">Move Name</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_stock_transfer" string="Deliver" type="object"  class="oe_highlight"  attrs="{'invisible':['|',('picking_deliver', '=', False),('deliver_no', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='date_due']" position="after">
                <field name="picking_transfer_id"/>
                <field name="invoice_picking_id" invisible="1"/>
                <field name="picking_deliver" invisible="1"/>
                <field name="deliver_no" invisible="1"/>
                <field name="deliver_status"/>
            </xpath>
            <xpath expr="//sheet/h1" position="before">
                  <div class="oe_button_box" name="button_box">                 
                    <button type="object"
                        name="action_view_picking" states="open,paid"
                        class="oe_stat_button" attrs="{'invisible':[('origin', '!=', False)]}"
                        icon="fa-truck">
                        <field name="picking_count"  string="Delivery" widget="statinfo"/>
                    </button>
                      </div>
            </xpath>
        </field>
        </record>

        <record id="supplier_invoice_stock_move_view" model="ir.ui.view">
            <field name="name">Move Name</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_stock_receive" string="Receive" type="object"  class="oe_highlight"
                       attrs="{'invisible':['|',('picking_deliver_bill', '=', False),('deliver_no', '=', True)]}"/>
                </xpath>
                <xpath expr="//field[@name='date_due']" position="after">
                    <field name="picking_type_id"/>
                    <field name="invoice_picking_id" invisible="1"/>
                    <field name="picking_deliver_bill" invisible="1"/>
                    <field name="deliver_no" invisible="1"/>
                    <field name="shipment_status"/>
                </xpath>
                <xpath expr="//sheet/div" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button type="object"
                            name="action_view_picking"
                            class="oe_stat_button" attrs="{'invisible':[('origin', '!=', False)]}"
                            icon="fa-truck">
                            <field name="picking_count"  string="Shipment" widget="statinfo"/>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>
        
         <record id="stock_config_settings_view_form_inherit_stock" model="ir.ui.view">
            <field name="name">stock settings</field>
            <field name="model">stock.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="stock.view_stock_config_settings" />
            <field name="arch" type="xml">             
	           <group name="traceability"  position="after">
	            <group name="stock_picking" string="Invoice To Stock">
	            <group>
	                 <field name="stock_picking" string="Stock Picking From Invoice"/>
	                 <field name="stock_picking_bill" string="Stock Picking From Bills"/>
	            </group>
	            </group>
	            </group>
             </field>
            </record>
  </data>
</odoo>