<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="product_publish_action" model="ir.actions.server">
		<field name="name">Publish/Unpublish</field>
		<field name="condition">True</field>
		<field name="type">ir.actions.server</field>
		<field name="model_id" ref="model_product_template" />
		<field name="state">code</field>
		<field name="code">
            if records:
            action = records.product_publish()
        </field>

	</record>

	<record id="action_product_publish" model="ir.values">
		<field name="name">Publish/Unpublish</field>
		<field name="model_id" ref="model_product_template" />
		<field name="model">product.template</field>
		<field name="key2">client_action_multi</field>
		<field eval="'ir.actions.server,%d'%product_publish_action" name="value" />
	</record>
</odoo>