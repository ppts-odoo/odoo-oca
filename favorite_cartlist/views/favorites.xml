<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Main Menu -->
        <menuitem name="Favorite CartList in e-commerce"
                  id="favorite_cartlist.favorite_cartlist_main"
                  web_icon="/favorite_cartlist/static/description/icon.png"/>

        <!-- // Favorites Form View -->
        <record id="favorites_form_view" model="ir.ui.view">
            <field name="name">website.favorites.form</field>
            <field name="model">website.favorites</field>
            <field name="arch" type="xml">
                <form string="Website Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="user_id" invisible="True"/>
                        </group>
                        <notebook>
                            <page name="favorites_ids" string="Favorites List">
                                <field name="favorites_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_qty"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- // Favorites Tree View -->
        <record id="favorites_tree_view" model="ir.ui.view">
            <field name="name">website.favorites.tree</field>
            <field name="model">website.favorites</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Favorites Form">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- // favorites Action -->
        <record id="action_favorites_website"
                model="ir.actions.act_window">
            <field name="name">Favorites</field>
            <field name="res_model">website.favorites</field>
            <!--			<field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create your favorites
                </p>
            </field>
        </record>

        <!-- // Menus -->

<!--        <menuitem name="Favorites" id="website_favorites"-->
<!--                  action="action_favorites_website"-->
<!--                  parent="website_sale.menu_ecommerce_settings" sequence="100"/>-->
        <menuitem
        id="website_favorites"
        parent="website_sale.menu_ecommerce_settings"
        name="Favorites"
        action="favorite_cartlist.action_favorites_website"/>
    </data>
</odoo>
